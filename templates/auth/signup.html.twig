{% extends "wide.html.twig" %}

{% block body %}
    <form class="theme-box card-box page-wide-cont-s block-middle" action="{{ path("signup_init") }}" method="POST">
        <div class="main-title card-title"> Create a New Account </div>
        {% if error.message is defined %}
            <div class="main-error card-error"> {{ error.message }} </div>
        {% endif %}
        <div class="card-cont">
            <input class="main-input card-input block-middle" name="username" placeholder="username" pattern="^[a-zA-Z0-9_]{1,25}$" required>
            <input class="main-input card-input block-middle" name="email" type="email" placeholder="email" required>
            <input class="main-input card-input block-middle" name="password" type="password" placeholder="password" required>
            <input class="main-input card-input block-middle" name="password_repeat" type="password" placeholder="password (repeat)" required>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}">
        <button class="main-button card-button" type="submit" name="submit"> Signup </button>
    </div>
{% endblock %}
